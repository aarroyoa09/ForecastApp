<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    app:cardBackgroundColor="#002087"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="408dp"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/rowsummary"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="left"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="28sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="4sp"
            app:layout_constraintEnd_toStartOf="@+id/rowpp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rowday" />

        <TextView
            android:id="@+id/rowmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="TextView"
            android:textColor="#FF5454"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/rowicon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rowicon"
            android:layout_width="102dp"
            android:layout_height="91dp"
            android:layout_marginStart="284dp"
            android:layout_marginLeft="284dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rowmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="TextView"
            android:textColor="#675CFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/rowicon"
            app:layout_constraintTop_toBottomOf="@+id/rowmax" />

        <TextView
            android:id="@+id/rowday"
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/rowmax"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rowpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="TextView"
            android:textColor="#00C8DD"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/rowicon"
            app:layout_constraintTop_toBottomOf="@+id/rowmin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>